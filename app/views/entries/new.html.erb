<h1>New Entry for <%= @place["name"] %></h1>

<form action="/entries" method="post">
  <p>
    <label for="title">Title</label>
    <input type="text" name="title" id="title">
  </p>

  <p>
    <label for="description">Description</label>
    <textarea name="description" id="description"></textarea>
  </p>

  <p>
    <label for="posted_on">Date</label>
    <input type="date" name="posted_on" id="posted_on">
  </p>

  <!-- hidden foreign key -->
  <input type="hidden" name="place_id" value="<%= params["place_id"] %>">

  <button>Create entry</button>
</form>

<p>
  <a href="/places/<%= params["place_id"] %>">Back to place</a>
</p>